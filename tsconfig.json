{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"]
}
